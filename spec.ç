macro struct
{
	int	comment				:1;
	int	comments			:1;
	int	quote				:1;
	int	quotes				:1;
	int	escaped				:1;
	int	parentheses_level	:16;
	int	brackets_level		:16;
	int	braces_level		:16;
}		c_ctx;


macro rule	test42(const char *s)
{
	int		i;
	char 	name[64];
	char	*o;

	i = 0;
	while (s[i] && s[i] == "Hello "[i])
	{
		i += 1;
	}
	if ("Hello "[i])
		return (rule) {0,0};
	while (s[i] && s[i] != '.' && (i + 6) < 33)
	{
		name[i - 6] = s[i];
		i += 1;
	}
	name[i - 6] = 0;
	if (s[i] != '.')
		return (rule) {0,0};
	asprintf(&o, "Hallo  p%s!", name);
	return (rule) {i + 1, o};
}

macro rule	test(const char *s)
{
	return (rule) {0, 0};
}

#define or &&
macro rule	lol(const char *s)
{
	char	name[255];
	char	*o;
	size_t	i;

	if (s[0] == 'o' && s[1] == 'r' && s[2] == ' ' && s[3] == '0')
	{
		asprintf(&o, "|| 0");
		return (rule) {4, o};
	}
	return (rule) {0, 0};
}



